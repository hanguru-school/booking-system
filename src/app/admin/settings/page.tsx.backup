  const [formData, setFormData] = useState<MasterInfo>(masterInfo);
  const [showPassword, setShowPassword] = useState(false);
  const [addressLoading, setAddressLoading] = useState(false);

  // masterInfo가 변경될 때 formData 업데이트
  useEffect(() => {
    console.log("masterInfo 변경됨:", masterInfo);
    setFormData(masterInfo);
  }, [masterInfo]);

  // formData가 변경될 때마다 로그 출력 (디버깅용)
  useEffect(() => {
    console.log("formData 변경됨:", formData);
  }, [formData]);

  const handleSubmit = (e: React.FormEvent) => {
    e.preventDefault();
    onSave(formData);
  };

  // 전화번호 포맷팅 (숫자만 입력받고 대시 표시)
  const formatPhoneNumber = (value: string) => {
    const numbers = value.replace(/[^\d]/g, '');
    if (numbers.length <= 3) return numbers;
    if (numbers.length <= 7) return `${numbers.slice(0, 3)}-${numbers.slice(3)}`;
    return `${numbers.slice(0, 3)}-${numbers.slice(3, 7)}-${numbers.slice(7, 11)}`;
  };

  const handlePhoneChange = (e: React.ChangeEvent<HTMLInputElement>) => {
    const formatted = formatPhoneNumber(e.target.value);
    setFormData({ ...formData, phone: formatted });
  };

  const handleEmergencyContactChange = (e: React.ChangeEvent<HTMLInputElement>) => {
    const formatted = formatPhoneNumber(e.target.value);
    setFormData({ ...formData, emergencyContact: formatted });
  };

  // 우편번호 포맷팅 (숫자만 입력받고 대시 표시)
  const formatPostalCode = (value: string) => {
    const numbers = value.replace(/[^\d]/g, '');
    if (numbers.length <= 3) return numbers;
    return `${numbers.slice(0, 3)}-${numbers.slice(3, 7)}`;
  };

  // 우편번호로 주소 자동 입력 (실제 일본 우편번호 API 사용)
  const handlePostalCodeChange = async (e: React.ChangeEvent<HTMLInputElement>) => {
    const formatted = formatPostalCode(e.target.value);
    setFormData({ ...formData, postalCode: formatted });
    
    if (formatted.length === 8) { // 123-4567 형식
      setAddressLoading(true);
      try {
        // 실제 일본 우편번호 API 호출
        const postalCode = formatted.replace('-', '');
        const response = await fetch(`https://zipcloud.ibsnet.co.jp/api/search?zipcode=${postalCode}`);
        const data = await response.json();
        
        if (data.status === 200 && data.results && data.results.length > 0) {
          const result = data.results[0];
          const address = `${result.address1}${result.address2}${result.address3}`;
          setFormData({ 
            ...formData, 
            postalCode: formatted, 
            address: address 
          });
        } else {
          // API에서 결과가 없을 경우 기본 주소 설정
          setFormData({ 
            ...formData, 
            postalCode: formatted, 
            address: "주소를 찾을 수 없습니다. 수동으로 입력해주세요." 
          });
        }
        setAddressLoading(false);
      } catch (error) {
        console.error("주소 조회 오류:", error);
        setFormData({ 
          ...formData, 
          postalCode: formatted, 
          address: "주소 조회 중 오류가 발생했습니다." 
