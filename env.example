# Production Environment Configuration
# This file contains all environment variables for the production server
# Copy this to .env.local and fill in the actual values

# Production Server Settings
NEXT_PUBLIC_PRODUCTION_URL=http://192.168.1.41:3000
NEXT_PUBLIC_ENVIRONMENT=production
NODE_ENV=production

# Database Configuration (로컬 PostgreSQL)
DATABASE_URL="postgresql://malmoi_admin:password@localhost:5432/malmoi_system?sslmode=disable"

# File Storage Configuration (로컬 MinIO)
AWS_REGION=ap-northeast-1
AWS_S3_BUCKET=malmoi-system-files
AWS_ACCESS_KEY_ID=minio_root_user
AWS_SECRET_ACCESS_KEY=minio_root_password
S3_ENDPOINT=http://127.0.0.1:9000
S3_FORCE_PATH_STYLE=true
S3_BUCKET_NAME=malmoi-system-files

# LINE Configuration
LINE_CHANNEL_ID=your_line_channel_id
LINE_CHANNEL_SECRET=your_line_channel_secret
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_access_token

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here

# Email Configuration (if needed)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Security Configuration
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=http://192.168.1.41:3000

# API Configuration
API_BASE_URL=http://192.168.1.41:3000/api

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_BACKUP=true

# Monitoring Configuration
SENTRY_DSN=your_sentry_dsn
LOG_LEVEL=info

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Development Override (for local testing only)
# Set to true only for local development
NEXT_PUBLIC_DEV_MODE=false 